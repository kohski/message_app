<div class="conteiner">
    <header class="clearfix">
    <div class="main">
      <h1>Message App</h1>
    </div>
    <div class="new_link">
      <%= link_to 'new', new_message_path %>
    </div>
  </header>
  
  
  <%= notice %>
  <% @messages.each do |msg|%>
    <div class="msg_box clearfix">
      <div class="msg_main">
        <%= msg.content %>      
      </div>
      <ul class="msg_buttons_list">
        <li class="msg_button">
          <%= link_to 'edit',edit_message_path(msg.id) %>
        </li>
        <li class="msg_button">
          <%= link_to 'delete',message_path(msg.id), method: :delete, data:{confirm: '本当に削除しますか？'} %>
        </li>
      </ul>
    </div>
  <% end %>
  
  <footer class="footer">
    <p>Copyright © 2019 kohski All Rights Reserved.</p>
  </footer>
</div>
